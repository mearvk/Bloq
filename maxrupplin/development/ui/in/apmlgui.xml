            </jmenu>
            <jmenu setText="Build">
                <jmenuitem setText="Item 1"/>
                <jmenuitem setText="Item 2"/>
            </jmenu>
            <jmenu setText="Run">
                <jmenuitem setText="Item 1"/>
                <jmenuitem setText="Item 2"/>
            </jmenu>
            <jmenu setText="Toolz">
                <jmenuitem setText="Item 1"/>
                <jmenuitem setText="Item 2"/>
            </jmenu>
        </jmenubar>
        <jtabbedpane setBackgroundImage="tabbedpane_bg.png">
            <tab setText="Tab One"/>
            <tab setText="Tab Two"/>
            <tab setText="Tab Three"/>
        </jtabbedpane>
        <jsplitpane setSize="100%:100%" setBackground="new Color(229,229,229)" setMargin="10:10:10:10"
                    setDividerLocation="150">
            <jpanel setSize="30%:100%" setBackground="new Color(229,229,229)" setMargin="10:10:10:10"
